{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "python samastroi_telethon.py"
  },
  "variables": {
    "TG_API_ID": {
      "description": "Telegram API ID",
      "required": true
    },
    "TG_API_HASH": {
      "description": "Telegram API Hash",
      "required": true
    },
    "ADMIN_ID": {
      "description": "Telegram admin id",
      "required": true
    },
    "YAGPT_API_KEY": {
      "description": "YandexGPT key",
      "required": true
    },
    "YAGPT_FOLDER_ID": {
      "description": "Yandex folder id",
      "required": true
    },
    "LOG_LEVEL": {
      "description": "Log level",
      "required": false,
      "defaultValue": "INFO"
    }
  }
}